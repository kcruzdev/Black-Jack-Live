    function setActions(opts) {
      var hand = player.getHand();
  
      if(!running) {
        $('#deal')  .prop('disabled', false);
        $('#hit')   .prop('disabled', true);
        $('#stand') .prop('disabled', true);
        $('#double').prop('disabled', true);
        $('#split') .prop('disabled', true);
